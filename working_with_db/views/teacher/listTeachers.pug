extends ../head

block content
    .container.mt-4
        h1.text-center.mb-4 Добавить преподавателя
        a(href="/addTeacher" class="btn btn-success mb-3") Добавить преподавателя
        .list-group
            each el in teachers
                li(class="list-group-item d-flex justify-content-between align-items-center")
                    a(href="/teacher/" + el.id class="text-decoration-none") #{el.name}
                    
