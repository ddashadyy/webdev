extends ../head

block content
    .container.mt-4
        h2.text-center Обновить информацию о группе студентов
        
        // Форма обновления
        form(action="/updateStudentGroup/" + studentGroup.id, method="POST" class="mb-3")
            .mb-3
                label(for="name") Наименование группы
                input(name="name" type="text" class="form-control" placeholder="Наименование группы" value=studentGroup.name required)
            .text-center
                input.btn.btn-primary(type="submit" value="Обновить")

        // Форма удаления
        form(action="/deleteStudentGroup/" + studentGroup.id, method="POST" class="text-center")
            input.btn.btn-danger(type="submit" value="Удалить")
