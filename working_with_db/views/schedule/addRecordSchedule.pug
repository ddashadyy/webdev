extends ../head

block content
    - var weekdays = ["Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота", "Воскресенье"]
    - var pair_numbers = [1, 2, 3, 4, 5]
    .container.mt-4
        h2.text-center Группа #{student_group.name}
        form(action="/addRecordSchedule/" + student_group.id, method="POST" class="form-group")
            .mb-3
                label(for="week_day") День недели
                select(name="week_day" class="form-select" required)
                    - for (var i = 0; i < weekdays.length; i++)
                        option(value=i) #{weekdays[i]}
            .mb-3
                label(for="pair_number") Номер пары
                select(name="pair_number" class="form-select" required)
                    each pair_number in pair_numbers
                        option(value=pair_number) #{pair_number}
            .mb-3
                label(for="discipline_teacher_id") Дисциплина и преподаватель
                select(name="discipline_teacher_id" class="form-select" required)
                    each el in discipline_teacher
                        option(value=el.id) #{el.discipline_name} &mdash; #{el.teacher_name}
            .text-center
                input.btn.btn-primary(type="submit" value="Добавить")
