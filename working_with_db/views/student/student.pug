extends ../head

block content
    .container.mt-4
        h2.text-center Обновить информацию о студенте

        // Форма обновления
        form(action="/updateStudent/" + student.id, method="POST", class="mb-4")
            .mb-3
                label(for="name") ФИО студента
                input(name="name" type="text" class="form-control" placeholder="ФИО студента" value=student.name required)
            .mb-3
                label(for="student_group_id") Группа
                select(name="student_group_id" class="form-select")
                    each el in studentGroups
                        if(student.student_group_id == el.id)
                            option(value=el.id selected) #{el.name}
                        else
                            option(value=el.id) #{el.name}
            .text-center
                input.btn.btn-primary(type="submit" value="Обновить")

        // Форма удаления
        form(action="/deleteStudent/" + student.id, method="POST", class="text-center")
            input.btn.btn-danger(type="submit" value="Удалить")
