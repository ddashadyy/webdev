extends ../head

block content
    .container.mt-4
        h1.text-center.mb-4 Добавить студента
        a(href="/addStudent" class="btn btn-success mb-3") Добавить студента
        .list-group
            each el in students
                li(class="list-group-item d-flex justify-content-between align-items-center")
                    a(href="/student/" + el.id class="text-decoration-none") #{el.name}
                    span(class="badge bg-primary rounded-pill") Группа: #{el.student_group_name}
