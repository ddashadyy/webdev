extends ../head

block append scripts
    // подключаем скрипт
    script(src="/js/scriptAttendanceJournal.js")

block content
    .container.mt-4
        a(href="/addAttendanceMark", class="btn btn-primary mb-3") Добавить отметки посещаемости
        
        .mb-3
            label(for="student_group_id") Выберите группу
            select(name="student_group_id" id="student_group_id", class="form-select", required)
                each el in studentGroups
                    option(value=el.id) #{el.name}

        .mb-3
            label(for="date_pair") Дата занятий
            input(name="date_pair" id="date_pair", type="date", class="form-control", placeholder="Дата занятий", required)

        div(id="attendance_table_id", class="mt-3")
